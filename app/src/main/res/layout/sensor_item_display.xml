<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ru.gubkin.lk.arduinoworksheet.component.sensor.SensorDisplayView
        android:layout_width="140dp"
        android:layout_height="90dp"
        android:id="@+id/sensor_display_view"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/sensor_display_label"
        android:layout_below="@+id/sensor_display_view"
        android:layout_alignRight="@+id/sensor_display_view"
        android:layout_alignEnd="@+id/sensor_display_view"
        android:gravity="center_horizontal"
        android:layout_alignLeft="@+id/sensor_display_view"
        android:layout_alignStart="@+id/sensor_display_view" />
</RelativeLayout>